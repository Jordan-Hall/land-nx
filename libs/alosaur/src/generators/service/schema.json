{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "Service",
  "title": "Generator Alosaur Service",
  "type": "object",
  "properties": {
    "name": {
      "description": "The name of the Service.",
      "type": "string",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use?"
    },
    "area": {
      "description": "The path to import the file you which to add as a provider",
      "type": "string",
      "format": "path"
    },
    "project": {
      "description": "The Alosaur project to target.",
      "type": "string",
      "$default": {
        "$source": "projectName"
      },
      "alias": "p",
      "x-prompt": "What Alosaur project would you like to target?"
    },
    "directory": {
      "description": "Directory where the generated files are placed.",
      "type": "string",
      "aliases": [
        "dir",
        "path"
      ]
    },
    "skipFormat": {
      "description": "Skip formatting files.",
      "type": "boolean",
      "default": false,
      "x-priority": "internal"
    }
  },
  "additionalProperties": false,
  "required": [
    "name",
    "project"
  ]
}
